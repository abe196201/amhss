					</div>
					<div class="details_exp">
						<h3>Better Protection</h3>
						<p>Basic protection plus...</p>
					</div>
				</div>
				<div class="feature">
					<div class="ficon">
						<%= image_tag 'premium.png' %>
					</div>
					<div class="details_exp">
						<h3>Advanced Protection</h3>
						<p>Better protection plus...</p>
					</div>
				</div>

	</section><!--  End Features  -->

	<section class="features">

		<div class="wrapper">
			<h1>Business Protection</h1>
				<div class="feature">
					<div class="ficon">
						<%= image_tag 'basic.png' %>
					</div>
					<div class="details_exp">
						<h3>Basic Protection</h3>
						<p>Three (3) motion detecting sensors</p>
					</div>
				</div>
				<div class="feature">
					<div class="ficon">
						<%= image_tag 'plus.png' %>
					</div>
					<div class="details_exp">
						<h3>Better Protection</h3>
						<p>Basic protection plus...</p>
					</div>
				</div>
				<div class="feature">
					<div class="ficon">
						<%= image_tag 'premium.png' %>
					</div>
					<div class="details_exp">
						<h3>Advanced Protection</h3>
						<p>Better protection plus...</p>
					</div>
				</div>

	</section><!--  End Features  -->
	
	<%= render 'layouts/footer' %>

